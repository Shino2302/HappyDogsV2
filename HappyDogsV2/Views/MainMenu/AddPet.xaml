<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HappyDogsV2.Views.AddPet"
             Title="Add Pet"
             IconImageSource="plus.png">
    <Grid BackgroundColor="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label 
        Grid.Row="0"
        Text="Agregar Mascota"
        HorizontalOptions="Center"
        VerticalOptions="Center"
        FontSize="28"
        FontAttributes="Italic"
        TextColor="Black"/>

        <StackLayout Grid.Row="1" Margin="20">
            <Entry Placeholder="Nombre de Perro" PlaceholderColor="Black"/>
            <Entry Placeholder="Raza" PlaceholderColor="Black"/>
            <Picker Title="Forma de alimentar al perro:">
                <Picker.Items>
                    <x:String>Con comida seca</x:String>
                    <x:String>Con comida h√∫meda</x:String>
                    <x:String>Con comida casera</x:String>
                    <x:String>Con comida cruda</x:String>
                </Picker.Items>
            </Picker>
            <Button 
            Text="Agregar" 
            Margin="0,20,0,0"
            BackgroundColor="#007bff"
            TextColor="White"
            CornerRadius="30"/>
        </StackLayout>
    </Grid>

</ContentPage>