<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HappyDogsV2.Views.MainMenu.PetProfiles.PetCamera"
             Title="PetCamera">
    <Grid RowDefinitions="150,*">
        <Label Text="Video:" 
               Grid.Row="0"
               Grid.Column="0"
               FontSize="Title"
               FontAutoScalingEnabled="True"
               Margin="10,5,0,0"
               FontAttributes="Bold"/>
        
        <Frame Grid.Row="1"
               Grid.Column="0"
               Margin="15,-100,15,150"
               Padding="15">
            <Image Source="chiquinunis.jpeg"
                   Margin="0,-50"/>
        </Frame>

        <Label x:Name="Straemsss"
               TextColor="Black"/>

        <Button Text="Tomar Foto" 
                Grid.Row="2"
                Grid.Column="0"
                VerticalOptions="End"
                HorizontalOptions="Center"
                Margin="0,0,0,30"
                FontSize="Large"
                FontAutoScalingEnabled="True"
                FontAttributes="Bold"/>
    </Grid>
</ContentPage>